<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0CC9CF</item>
        <item name="colorPrimaryDark">#2196F3</item>
        <item name="colorAccent">#00BCD4</item>
    </style>
    <style name="TextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/fc_iconic_regular</item>
        <item name="android:textColor">#393939</item>
    </style>

    <style name="TextStyleBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/fc_iconic_bold</item>
        <item name="android:textColor">#393939</item>
    </style>

    <style name="TextStyle.Bold.Small" parent="TextStyleBold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.Bold.Medium" parent="TextStyleBold">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextStyle.Bold.Large" parent="TextStyleBold">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextStyle.Small" parent="TextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.Medium" parent="TextStyle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextStyle.Large" parent="TextStyle">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="DialogScale">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>
</resources>